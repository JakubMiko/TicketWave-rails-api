<header class="w-full sticky top-0 z-40 backdrop-blur bg-white/70 shadow-sm border-b border-purple-100">
  <div class="container mx-auto px-4">
    <nav class="flex items-center py-4">
      <div class="mr-auto">
        <a href="/" class="font-extrabold text-2xl text-purple-700">
          Ticket<span class="text-gray-700">Wave</span>
        </a>
      </div>
      <div class="flex items-center gap-4">
        <% if helpers.admin_signed_in? %>
          <a href="<%= admins_dashboard_path %>" class="text-base font-medium hover:text-purple-700">Admin Panel</a>
          <a href="<%= orders_path %>" class="text-base font-medium hover:text-purple-700">My Orders</a>
          <span class="ml-2">Hello, <%= current_admin.first_name %>! <span class="font-bold">(A)</span></span>
          <%= button_to "Log out", destroy_admin_session_path, method: :delete, class: "button is-light ml-2" %>
        <% elsif helpers.user_signed_in? %>
          <a href="<%= users_dashboard_path %>" class="text-base font-medium hover:text-purple-700">User Panel</a>
          <a href="<%= orders_path %>" class="text-base font-medium hover:text-purple-700">My Orders</a>
          <span class="ml-2">Hello, <%= current_user.first_name %>!</span>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "button is-light ml-2" %>
        <% else %>
          <a class="px-4 py-2 bg-purple-700 text-white rounded-full font-semibold hover:bg-purple-800 transition" href="<%= new_user_registration_path %>">Sign up</a>
          <a class="px-4 py-2 bg-white text-purple-700 border border-purple-700 rounded-full font-semibold hover:bg-purple-50 transition" href="<%= new_user_session_path %>">Log in</a>
          <a class="flex items-center justify-center rounded-full border border-gray-300 p-2" href="<%= new_admin_session_path %>">
            <img src="<%= asset_path('lifebuoy_icon.svg') %>" alt="Log in as admin" width="24" height="24">
          </a>
        <% end %>
      </div>
    </nav>
  </div>
</header>