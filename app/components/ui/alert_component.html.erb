<div
  role="alert"
  class="alert-content relative w-full rounded-lg border p-4 shadow-lg bg-white flex items-start gap-3 mb-4 transition-all duration-300 opacity-100<%= alert_classes %>"
  data-testid="<%= alert_testid %>"
  data-controller="flash"
  data-flash-hide-delay-value="4000"
>
  <div class="mt-1 text-xl">
    <% case variant %>
    <% when :notice %>
      <i class="fa-solid fa-circle-info text-blue-500"></i>
    <% when :success %>
      <i class="fa-solid fa-circle-check text-green-500"></i>
    <% when :alert %>
      <i class="fa-solid fa-triangle-exclamation text-yellow-400"></i>
    <% when :error %>
      <i class="fa-solid fa-circle-xmark text-red-500"></i>
    <% end %>
  </div>
  <div>
    <h5 class="mb-1 font-semibold leading-none tracking-tight"><%= title %></h5>
    <div class="text-sm text-gray-700">
      <%= simple_format(content) %>
    </div>
  </div>
  <button type="button" class="absolute top-2 right-2 text-gray-400 hover:text-gray-700 transition" data-action="click->flash#close" aria-label="Close">
    <i class="fa-solid fa-xmark"></i>
  </button>
</div>
