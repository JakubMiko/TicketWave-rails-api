<section class="relative py-16 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-tr from-purple-500 via-pink-300 to-yellow-100 opacity-90 pointer-events-none"></div>
  <div class="relative container mx-auto px-4 max-w-screen-xl">
    <h2 class="text-3xl font-bold text-center mb-10">
      <%= t("landing.features.why") %>
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="bg-white rounded-xl shadow-md text-center py-8 h-full flex flex-col items-center">
        <span class="text-purple-600 mb-4 text-5xl">
          <i class="fas fa-ticket-alt"></i>
        </span>
        <h3 class="text-xl font-semibold mb-2"><%= t("landing.features.easy_purchase.title") %></h3>
        <p class="text-gray-600"><%= t("landing.features.easy_purchase.desc") %></p>
      </div>
      <div class="bg-white rounded-xl shadow-md text-center py-8 h-full flex flex-col items-center">
        <span class="text-purple-600 mb-4 text-5xl">
          <i class="fas fa-mobile-alt"></i>
        </span>
        <h3 class="text-xl font-semibold mb-2"><%= t("landing.features.mobile_tickets.title") %></h3>
        <p class="text-gray-600"><%= t("landing.features.mobile_tickets.desc") %></p>
      </div>
      <div class="bg-white rounded-xl shadow-md text-center py-8 h-full flex flex-col items-center">
        <span class="text-purple-600 mb-4 text-5xl">
          <i class="fas fa-bell"></i>
        </span>
        <h3 class="text-xl font-semibold mb-2"><%= t("landing.features.notifications.title") %></h3>
        <p class="text-gray-600"><%= t("landing.features.notifications.desc") %></p>
      </div>
      <div class="bg-white rounded-xl shadow-md text-center py-8 h-full flex flex-col items-center">
        <span class="text-purple-600 mb-4 text-5xl">
          <i class="fas fa-shield-alt"></i>
        </span>
        <h3 class="text-xl font-semibold mb-2"><%= t("landing.features.security.title") %></h3>
        <p class="text-gray-600"><%= t("landing.features.security.desc") %></p>
      </div>
    </div>
  </div>
</section>