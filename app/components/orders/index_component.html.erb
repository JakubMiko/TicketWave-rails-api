<div class="container py-8 mx-auto">
  <h1 class="text-4xl font-extrabold text-purple-800 mb-6 tracking-tight drop-shadow flex justify-center">
    <%= t("orders.index_component.order_history") %>
  </h1>
  <div class="overflow-x-auto rounded-2xl shadow-2xl bg-white mb-32 min-h-[70vh]">
    <table class="min-w-full divide-y divide-purple-100">
      <thead>
        <tr class="bg-gradient-to-r from-purple-200 to-purple-50 text-purple-800 uppercase text-xs tracking-wider">
          <th class="px-10 py-6 text-left rounded-tl-2xl border-b-2 border-purple-200"><%= t("orders.index_component.order_number") %></th>
          <th class="px-10 py-6 text-left border-b-2 border-purple-200"><%= t("orders.index_component.event") %></th>
          <th class="px-10 py-6 text-left border-b-2 border-purple-200"><%= t("orders.index_component.event_date") %></th>
          <th class="px-10 py-6 text-left border-b-2 border-purple-200"><%= t("orders.index_component.tickets") %></th>
          <th class="px-10 py-6 text-left border-b-2 border-purple-200"><%= t("orders.index_component.amount") %></th>
          <th class="px-10 py-6 text-left border-b-2 border-purple-200"><%= t("orders.index_component.status") %></th>
          <th class="px-10 py-6 text-left border-b-2 border-purple-200"><%= t("orders.index_component.purchase_date") %></th>
          <th class="px-10 py-6 text-left rounded-tr-2xl border-b-2 border-purple-200"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-purple-50 text-base">
        <% orders.each do |order| %>
          <tr class="hover:bg-purple-50 transition group">
            <td class="px-10 py-4 font-semibold text-purple-900 group-hover:text-purple-700">#<%= order.id %></td>
            <td class="px-10 py-4 text-gray-700"><%= order.event.name %></td>
            <td class="px-10 py-4 text-gray-700"><%= order.event.date.strftime("%d.%m.%Y, %H:%M") %></td>
            <td class="px-10 py-4 text-gray-700"><%= order.quantity %></td>
            <td class="px-10 py-4 text-gray-700"><%= number_to_currency(order.total_price, unit: "PLN", format: "%n %u") %></td>
            <td class="px-10 py-4">
              <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded shadow-sm">
                Purchased
              </span>
            </td>
            <td class="px-10 py-4 text-gray-700"><%= order.created_at.strftime("%d.%m.%Y, %H:%M") %></td>
            <td class="px-10 py-4 mt-4 flex flex-wrap gap-2">
              <%= link_to "Details", order_path(order), class: "text-purple-700 hover:underline font-semibold" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if orders.empty? %>
      <div class="flex justify-center items-center min-h-[30vh]">
        <div class="bg-blue-100 text-blue-800 px-6 py-4 rounded-xl text-lg font-semibold shadow">
          You have no orders yet.
        </div>
      </div>
    <% end %>
  </div>
  <div class="flex justify-center mt-6">
    <%= link_to "Back to events", events_path, class: "inline-block px-6 py-3 bg-purple-100 text-purple-800 font-semibold rounded-xl hover:bg-purple-200 transition" %>
  </div>
</div>