<div class="max-w-4xl mx-auto mt-10 bg-white rounded-2xl shadow-2xl p-8">
  <h1 class="text-3xl font-extrabold text-purple-800 mb-8 tracking-tight drop-shadow flex justify-center">
    <%= t("orders.show.order_details") %> #<%= order.id %>
  </h1>
  <div class="grid md:grid-cols-2 gap-8 mb-8">
    <div>
      <h2 class="text-xl font-bold text-purple-700 mb-4"><%= t("orders.show.event_information") %></h2>
      <p><span class="font-semibold"><%= t("orders.show.name") %>:</span> <%= order.event.name %></p>
      <p><span class="font-semibold"><%= t("orders.show.date") %>:</span> <%= order.event.date.strftime("%d.%m.%Y, %H:%M") %></p>
      <p><span class="font-semibold"><%= t("orders.show.place") %>:</span> <%= order.event.place %></p>
      <p><span class="font-semibold"><%= t("orders.show.category") %>:</span> <%= order.event.category %></p>
    </div>
    <div>
      <h2 class="text-xl font-bold text-purple-700 mb-4"><%= t("orders.show.order_information") %></h2>
      <p><span class="font-semibold"><%= t("orders.show.order_date") %>:</span> <%= order.created_at.strftime("%d.%m.%Y, %H:%M") %></p>
      <p><span class="font-semibold"><%= t("orders.show.tickets") %>:</span> <%= order.quantity %></p>
      <p><span class="font-semibold"><%= t("orders.show.ticket_price") %>:</span> <%= number_to_currency(order.ticket_batch.price, unit: "$", format: "%n %u") %></p>
      <p><span class="font-semibold"><%= t("orders.show.total_amount") %>:</span> <%= number_to_currency(order.total_price, unit: "$", format: "%n %u") %></p>
      <p>
        <span class="font-semibold"><%= t("orders.show.status") %>:</span>
        <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded shadow-sm ml-2">
          <%= t("orders.show.purchased") %>
        </span>
      </p>
    </div>
  </div>

  <hr class="my-8">

  <h3 class="text-lg font-bold text-purple-700 mb-4"><%= t("orders.show.your_tickets") %></h3>
  <div class="overflow-x-auto rounded-xl shadow mb-8">
    <table class="min-w-full divide-y divide-purple-100">
      <thead>
        <tr class="bg-gradient-to-r from-purple-200 to-purple-50 text-purple-800 uppercase text-xs tracking-wider">
          <th class="px-8 py-4 text-left rounded-tl-xl border-b-2 border-purple-200"><%= t("orders.show.ticket_number") %></th>
          <th class="px-8 py-4 text-left rounded-tr-xl border-b-2 border-purple-200"><%= t("orders.show.price") %></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-purple-50 text-base">
        <% order.tickets.each do |ticket| %>
          <tr class="hover:bg-purple-50 transition group">
            <td class="px-8 py-4 font-semibold text-purple-900 group-hover:text-purple-700"><%= ticket.ticket_number %></td>
            <td class="px-8 py-4 text-gray-700"><%= number_to_currency(ticket.price, unit: "$", format: "%n %u") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="flex justify-center mt-6">
    <%= link_to t("orders.show.back_to_order_history"), orders_path, class: "inline-block px-6 py-3 bg-purple-100 text-purple-800 font-semibold rounded-xl hover:bg-purple-200 transition" %>
  </div>
</div>