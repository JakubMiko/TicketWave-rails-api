<div class="container mx-auto max-w-lg py-10">
  <div class="bg-white rounded-2xl shadow-xl p-8 text-center">
    <h1 class="text-2xl font-bold text-red-600 mb-4"><%= t("events.destroy.title") %></h1>
    <p class="text-lg mb-8"><%= t("events.destroy.confirm", name: event.name) %></p>
    <div class="flex justify-center gap-4">
      <%= button_to t("events.destroy.delete"), event_path(event), method: :delete, data: { turbo_confirm: t("events.destroy.confirm_button") }, class: "px-4 py-2 rounded bg-red-100 hover:bg-red-200 text-red-700 font-semibold transition" %>
      <%= link_to t("events.destroy.cancel"), events_path, class: "px-4 py-2 rounded bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold transition" %>
    </div>
  </div>
</div>