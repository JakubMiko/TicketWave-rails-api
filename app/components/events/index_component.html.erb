<section data-controller="events-view" class="py-8">
  <div class="flex items-center justify-center gap-3 mb-6 ml-6">
    <h1 class="text-4xl font-extrabold text-purple-800 tracking-tight drop-shadow text-center">
      <%= t("events.index.events") %>
    </h1>
    <%= link_to new_event_path, title: t("events.index.create_new_event"),
        class: "flex items-center justify-center w-10 h-10 rounded-full bg-purple-100 hover:bg-purple-200 text-purple-700 transition shadow-sm" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
    <% end %>
  </div>
  <turbo-frame id="events_view">
    <div class="flex justify-center gap-2 mb-6">
      <%= link_to t("events.index.cards"), events_path(view: :cards),
          class: "px-4 py-2 rounded font-semibold transition #{params[:view] != 'list' ? 'bg-purple-600 text-white' : 'bg-gray-200 text-purple-800'}",
          data: { turbo_frame: "events_view" } %>
      <%= link_to t("events.index.list"), events_path(view: :list),
          class: "px-4 py-2 rounded font-semibold transition #{params[:view] == 'list' ? 'bg-purple-600 text-white' : 'bg-gray-200 text-purple-800'}",
          data: { turbo_frame: "events_view" } %>
    </div>

    <% if params[:view] == 'list' %>
      <%= render Events::ListComponent.new(events: events, current_user: current_user) %>
    <% else %>
      <div class="container grid grid-cols-1 md:grid-cols-2 gap-8 mx-auto">
        <% events.each do |event| %>
          <%= render Events::CardComponent.new(event: event, current_user: current_user) %>
        <% end %>
      </div>
    <% end %>
  </turbo-frame>
</section>