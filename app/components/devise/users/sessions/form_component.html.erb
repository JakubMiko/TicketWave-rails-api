<section class="flex justify-center items-center min-h-[90vh] pt-16 md:py-20 bg-gradient-to-b from-purple-100 to-white">
  <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-8 mx-4">
    <h2 class="text-2xl font-bold text-center text-purple-800 mb-6"><%= t("devise.users.sessions.title") %></h2>
    <turbo-frame id="modal-alert"></turbo-frame>
    <%= form_for(resource, as: resource_name, url: helpers.user_session_path, html: { class: "space-y-4" }) do |f| %>
      <div>
        <%= f.label :email, t("devise.users.sessions.email"), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-purple-500", placeholder: t("devise.users.sessions.email") %>
      </div>
      <div>
        <%= f.label :password, t("devise.users.sessions.password"), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-purple-500", placeholder: t("devise.users.sessions.password") %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <span class="text-sm"><%= t("devise.users.sessions.remember_me") %></span>
        </div>
      <% end %>
      <%= f.submit t("devise.users.sessions.submit"), class: "w-full py-2 px-4 bg-purple-700 hover:bg-purple-800 text-white font-semibold rounded transition" %>
    <% end %>
    <div class="text-center mt-4">
      <%= render Devise::Shared::LinksComponent.new(
        resource_name: resource_name,
        devise_mapping: devise_mapping,
        controller_name: controller_name
      ) %>
    </div>
  </div>
</section>
