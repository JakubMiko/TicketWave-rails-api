<section class="flex justify-center items-center min-h-[90vh] bg-gradient-to-b from-purple-100 to-white py-12">
  <div class="w-full max-w-lg bg-white rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-center text-purple-800 mb-6">
      <%= t("devise.registrations.title", default: "Sign up") %>
    </h2>
    <turbo-frame id="modal-alert"></turbo-frame>
    <%= form_for(resource, as: resource_name, url: helpers.registration_path(resource_name), html: { class: "space-y-5" }, data: { turbo: false }) do |f| %>
      <%= f.hidden_field :role, value: :user %>
      <div>
        <%= f.label :first_name, t("devise.registrations.first_name", default: "First name"), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :first_name, class: "input w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-purple-500", placeholder: t("devise.registrations.first_name_placeholder", default: "Enter your first name") %>
      </div>
      <div>
        <%= f.label :last_name, t("devise.registrations.last_name", default: "Last name"), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :last_name, class: "input w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-purple-500", placeholder: t("devise.registrations.last_name_placeholder", default: "Enter your last name") %>
      </div>
      <div>
        <%= f.label :email, t("devise.registrations.email", default: "Email"), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-purple-500", placeholder: t("devise.registrations.email_placeholder", default: "Enter your email") %>
      </div>
      <div>
        <%= f.label :password, t("devise.registrations.password", default: "Password"), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <% if minimum_password_length %>
          <p class="text-xs text-gray-500 mb-1">
            <%= t("devise.registrations.password_minimum", count: minimum_password_length, default: "(%{count} characters minimum)") %>
          </p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-purple-500", placeholder: t("devise.registrations.password_placeholder", default: "Enter your password") %>
      </div>
      <div>
        <%= f.label :password_confirmation, t("devise.registrations.password_confirmation", default: "Confirm password"), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-purple-500", placeholder: t("devise.registrations.password_confirmation_placeholder", default: "Confirm your password") %>
      </div>
      <div>
        <%= f.submit t("devise.registrations.submit", default: "Sign up"), class: "w-full py-2 px-4 bg-purple-700 hover:bg-purple-800 text-white font-semibold rounded transition" %>
      </div>
    <% end %>
  </div>
</section>
