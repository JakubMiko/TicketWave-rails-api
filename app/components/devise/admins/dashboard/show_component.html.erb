<section class="py-12 bg-gradient-to-b from-purple-100 to-white min-h-[90vh]">
  <div class="container mx-auto px-4">
    <div class="flex flex-col items-center mb-10">
      <h1 class="text-4xl font-extrabold text-purple-800 mb-2 tracking-tight drop-shadow"><%= t("devise.admins.dashboard.admin_dashboard") %></h1>
    </div>

    <div class="flex flex-wrap -mx-4 mb-12">
      <div class="w-full md:w-1/3 px-4 mb-6 md:mb-0 flex">
        <div class="flex flex-col flex-1 bg-gradient-to-br from-gray-50 to-gray-200 border border-gray-300 rounded-2xl shadow-lg p-6 text-center hover:scale-105 transition-transform h-full">
          <h2 class="text-xl font-bold text-green-800 mb-2 flex items-center justify-center gap-2"><i class="fa-solid fa-calendar-check text-green-500"></i> <%= t("devise.admins.dashboard.manage_events") %></h2>
          <p class="text-gray-600 mb-3 flex-1"><%= t("devise.admins.dashboard.manage_events_description") %></p>
          <a href="<%= events_path %>" class="inline-block py-1.5 px-4 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-md shadow transition text-sm"><%= t("devise.admins.dashboard.go_to_events") %></a>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-4 mb-6 md:mb-0 flex">
        <div class="flex flex-col flex-1 bg-gradient-to-br from-yellow-100 to-yellow-200 border border-yellow-300 rounded-2xl shadow-lg p-6 text-center hover:scale-105 transition-transform h-full">
          <h2 class="text-xl font-bold text-yellow-700 mb-2 flex items-center justify-center gap-2"><i class="fa-solid fa-users"></i> <%= t("devise.admins.dashboard.manage_users") %></h2>
          <p class="text-gray-600 mb-3 flex-1"><%= t("devise.admins.dashboard.browse_and_manage") %></p>
          <a href="#" class="inline-block py-1.5 px-4 bg-yellow-400 hover:bg-yellow-500 text-white font-semibold rounded-md shadow transition text-sm"><%= t("devise.admins.dashboard.go_to_users") %></a>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-4 flex">
        <div class="flex flex-col flex-1 bg-gradient-to-br from-blue-100 to-blue-200 border border-blue-300 rounded-2xl shadow-lg p-6 text-center hover:scale-105 transition-transform h-full">
          <h2 class="text-xl font-bold text-blue-700 mb-2 flex items-center justify-center gap-2"><i class="fa-solid fa-chart-bar"></i> <%= t("devise.admins.dashboard.statistics") %></h2>
          <p class="text-gray-600 mb-3 flex-1"><%= t("devise.admins.dashboard.statistics_description") %></p>
          <a href="#" class="inline-block py-1.5 px-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-md shadow transition text-sm"><%= t("devise.admins.dashboard.go_to_statistics") %></a>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-10">
      <div class="bg-gradient-to-br from-purple-50 to-white border border-purple-100 rounded-2xl shadow-lg p-6 flex flex-col">
        <h2 class="text-xl font-bold text-purple-800 mb-4 flex items-center gap-2"><i class="fa-solid fa-calendar-days"></i> <%= t("devise.admins.dashboard.recent_events") %></h2>
        <ul class="flex-1 space-y-2 mb-2">
          <% events.first(5).each do |event| %>
            <li class="text-gray-700 flex items-center gap-2"><i class="fa-regular fa-circle-dot text-purple-400"></i> <span class="font-medium"><%= event.name %></span> <span class="text-gray-500">- <%= event.date.strftime("%Y-%m-%d") %></span></li>
          <% end %>
        </ul>
      </div>

      <div class="bg-gradient-to-br from-yellow-50 to-white border border-yellow-100 rounded-2xl shadow-lg p-6 flex flex-col">
        <h2 class="text-xl font-bold text-yellow-700 mb-4 flex items-center gap-2"><i class="fa-solid fa-user-group"></i> <%= t("devise.admins.dashboard.recent_users") %></h2>
        <ul class="flex-1 space-y-2 mb-2">
          <% users.first(5).each do |user| %>
            <li class="text-gray-700 flex items-center gap-2"><i class="fa-regular fa-circle-dot text-yellow-400"></i> <span class="font-medium"><%= user.first_name %> <%= user.last_name %></span> <span class="text-gray-500">- <%= user.email %></span></li>
          <% end %>
        </ul>
      </div>

      <div class="bg-gradient-to-br from-blue-50 to-white border border-blue-100 rounded-2xl shadow-lg p-6 flex flex-col">
        <h2 class="text-xl font-bold text-blue-700 mb-4 flex items-center gap-2"><i class="fa-solid fa-chart-pie"></i> <%= t("devise.admins.dashboard.statistics") %></h2>
        <ul class="flex-1 space-y-2 mb-2">
          <li class="text-gray-700 flex items-center gap-2"><i class="fa-solid fa-calendar-check text-purple-400"></i> <%= t("devise.admins.dashboard.total_events") %>: <span class="font-semibold"><%= statistics[:total_events] %></span></li>
          <li class="text-gray-700 flex items-center gap-2"><i class="fa-solid fa-user text-yellow-400"></i> <%= t("devise.admins.dashboard.total_users") %>: <span class="font-semibold"><%= statistics[:total_users] %></span></li>
          <li class="text-gray-700 flex items-center gap-2"><i class="fa-solid fa-user-shield text-blue-400"></i> <%= t("devise.admins.dashboard.total_admins") %>: <span class="font-semibold"><%= statistics[:total_admins] %></span></li>
        </ul>
      </div>
    </div>
  </div>
</section>
