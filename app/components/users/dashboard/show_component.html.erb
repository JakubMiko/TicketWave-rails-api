<section class="py-12 bg-gradient-to-b from-purple-100 to-white min-h-[90vh]">
  <div class="container mx-auto px-4">
    <div class="flex flex-col items-center mb-10">
      <h1 class="text-4xl font-extrabold text-purple-800 mb-2 tracking-tight drop-shadow"><%= t("users.dashboard.title", default: "User Dashboard") %></h1>
      <p class="text-lg text-gray-700">Welcome, <%= current_user.first_name %>!</p>
    </div>
    <div class="flex flex-wrap -mx-4 mb-12">
      <div class="w-full md:w-1/2 px-4 mb-6 md:mb-0 flex">
        <div class="flex flex-col flex-1 bg-gradient-to-br from-green-50 to-white border border-green-100 rounded-2xl shadow-lg p-8 text-center hover:scale-105 transition-transform h-full">
          <h2 class="text-2xl font-bold text-green-700 mb-2 flex items-center justify-center gap-2"><i class="fa-solid fa-calendar-check"></i> <%= t("users.dashboard.my_events", default: "My Events") %></h2>
          <p class="text-gray-600 mb-4 flex-1"><%= t("users.dashboard.my_events_description", default: "Browse your events.") %></p>
          <a href="<%= events_path %>" class="inline-block py-2 px-6 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-lg shadow transition">Go to events</a>
        </div>
      </div>
      <div class="w-full md:w-1/2 px-4 flex">
        <div class="flex flex-col flex-1 bg-gradient-to-br from-blue-50 to-white border border-blue-100 rounded-2xl shadow-lg p-8 text-center hover:scale-105 transition-transform h-full">
          <h2 class="text-2xl font-bold text-blue-700 mb-2 flex items-center justify-center gap-2"><i class="fa-solid fa-chart-bar"></i> <%= t("users.dashboard.statistics", default: "Statistics") %></h2>
          <p class="text-gray-600 mb-4 flex-1"><%= t("users.dashboard.statistics_description", default: "View your statistics.") %></p>
          <a href="#" class="inline-block py-2 px-6 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow transition">Go to statistics</a>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
      <div class="bg-gradient-to-br from-purple-50 to-white border border-purple-100 rounded-2xl shadow-lg p-6 flex flex-col">
        <h2 class="text-xl font-bold text-purple-800 mb-4 flex items-center gap-2"><i class="fa-solid fa-calendar-days"></i> <%= t("users.dashboard.recent_events", default: "Recent Events") %></h2>
        <ul class="flex-1 space-y-2 mb-2">
          <% events.each do |event| %>
            <li class="text-gray-700 flex items-center gap-2"><i class="fa-regular fa-circle-dot text-purple-400"></i> <span class="font-medium"><%= event.name %></span> <span class="text-gray-500">- <%= event.date.strftime("%Y-%m-%d") %></span></li>
          <% end %>
        </ul>
      </div>
      <div class="bg-gradient-to-br from-blue-50 to-white border border-blue-100 rounded-2xl shadow-lg p-6 flex flex-col">
        <h2 class="text-xl font-bold text-blue-700 mb-4 flex items-center gap-2"><i class="fa-solid fa-chart-pie"></i> <%= t("users.dashboard.statistics", default: "Statistics") %></h2>
        <ul class="flex-1 space-y-2 mb-2">
          <li class="text-gray-700 flex items-center gap-2"><i class="fa-solid fa-calendar-check text-purple-400"></i> <%= t("users.dashboard.total_events", default: "Total events") %>: <span class="font-semibold"><%= statistics[:total_events] %></span></li>
          <li class="text-gray-700 flex items-center gap-2"><i class="fa-solid fa-ticket text-green-400"></i> <%= t("users.dashboard.total_tickets", default: "Total tickets") %>: <span class="font-semibold"><%= statistics[:total_tickets] %></span></li>
        </ul>
      </div>
    </div>
  </div>
</section>
